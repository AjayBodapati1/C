if (line.length() >= 22 && line.contains(":")) {
    // Extract first 22 characters and map them
    String typeNature = line.substring(0, 2).trim();
    String siteCode = line.substring(2, 8).trim();
    String applicationCode = line.substring(8, 16).trim();
    String instrumentCode = line.substring(16, 22).trim();

    // Parse the remaining part of the line (after first 22 chars)
    String[] segments = line.substring(22).split("\\*");
    Map<String, String> row = new LinkedHashMap<>();

    // Add extracted fields first
    row.put("TypeNature", typeNature);
    row.put("SiteCode", siteCode);
    row.put("ApplicationCode", applicationCode);
    row.put("InstrumentCode", instrumentCode);

    // Parse rest of the key:value segments
    for (String segment : segments) {
        String[] kv = segment.split(":", 2);
        if (kv.length == 2) {
            row.put(kv[0].trim(), kv[1].trim());
        }
    }

    if (!row.isEmpty()) {
        records.add(row);
    }
}