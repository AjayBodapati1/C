@RestController
public class S3MetadataController {

    private final S3MetadataService metadataService;

    public S3MetadataController(S3MetadataService metadataService) {
        this.metadataService = metadataService;
    }

    @GetMapping("/s3-file-metadata")
    public Map<String, String> getMetadata() {
        return metadataService.getFileMetadata();
    }
}