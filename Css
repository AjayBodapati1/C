package com.example.desis_to_csv.controller;

import com.example.desis_to_csv.service.S3MetadataService;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.Map;

@RestController
public class S3MetadataController {

    private final S3MetadataService service;

    public S3MetadataController(S3MetadataService service) {
        this.service = service;
    }

    @GetMapping("/s3/metadata")
    public Map<String, String> fetchMetadata() {
        return service.getMetadata();
    }
}