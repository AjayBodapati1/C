import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class S3FileMetadataController {

    @Autowired
    private S3FileMetadataService s3FileMetadataService;

    @GetMapping("/s3/save-metadata")
    public ResponseEntity<?> saveMetadataFromS3() {
        FileMetadata metadata = s3FileMetadataService.fetchAndSaveMetadataFromS3();
        if (metadata == null) {
            return ResponseEntity.ok("File metadata already exists. Skipping insert.");
        } else {
            return ResponseEntity.ok(metadata);
        }
    }
}